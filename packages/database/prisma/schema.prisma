// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  relationMode = "prisma"
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
}

/**
 * Represents a Page model.
 * @property {number} id - The unique identifier for the page (auto-incremented).
 * @property {string} email - The unique email associated with the page.
 * @property {string | null} name - The optional name associated with the page.
 */
model Page {
  id Int @id @default(autoincrement())

  email String  @unique
  name  String?

  @@map("pages")
}

/**
 * Represents a Waitlist model.
 * @property {number} id - The unique identifier for the waitlist entry (auto-incremented).
 * @property {string} email - The email of the user joining the waitlist.
 * @property {string} country - The country of the user joining the waitlist.
 * @property {string} ipAddress - The IP address of the user joining the waitlist.
 * @property {Date} createdAt - The timestamp when the waitlist entry was created.
 */
model Waitlist {
  id    Int    @id @default(autoincrement())
  email String @unique

  country   String
  ipAddress String

  createdAt DateTime @default(now())

  @@map("waitlist")
}
