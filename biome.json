{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["Liveblocks"]
  },
  "organizeImports": {
    "enabled": false,
    "include": ["**/*.ts", "**/*.tsx"],
    "ignore": ["**/*.d.ts", "**/*.test.ts", "**/*.test.tsx"]
  },
  "linter": {
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "files": {
    "ignore": [
      "packages/ui/components/ui/**",
      "packages/ui/lib/**",
      "packages/ui/hooks/**",
      "packages/collaboration/config.ts",
      "apps/docs/**/*.json",
      "apps/email/.react-email/**"
    ]
  }
}
